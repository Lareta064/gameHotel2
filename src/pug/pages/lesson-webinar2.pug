extends ../layouts/layout-light.pug

block content
	
	.course-page
		.course-page__content
			//=====sidebar======
			.course-menu
				//======= header Course menu sidebar =============
				.course-menu-header
					.course-menu-header__left
						a(href="#!").arrow-back
						.course-menu-game.text-16
							p Axie Infinity
					.course-menu-header__right
						.badge.badge--light Базовый курс
				.course-menu-body
					.course-menu-top
						.course-menu-left
							img(src="../img/games/axie-logo.png", width="100" alt="alt")
						.course-menu-right
							.point-block
								.text-18.text-bold
									p 223
								.text-14
									p Баллов эксперта
					//======= progress bar =============
					.course-menu-progress
						.progress-block
							.progress-block-text
								p Идет обучение
							.progress-block-line
								.progress-block-bar
									span 50%

					include ../sections/_edu-accor
			//==== main-frame=======
			.course-frame
				//==== header course-frame =======
				.header
					.flex-content
						.header-title.text-16.text-bold
							p Посмотрите видео и ответьте на вопрос
						.header-col.d-flex
							.header-col__box
								a(href="#!").button.button-light.button--flex
									span.support-icon
									span Помощь
							
							.header-right
								.profile-panel
									.profile-icon
										.icon-notify
											p.label
												span 2
									.profile-persone
										.profile-persone__img
											img(src="./img/ava.png", width="38" alt="ava")
										.profile-persone__arrow#profile-arrow
											svg(width="10" height="6")
												use(xlink:href="./img/svg-sprite.svg#iconArr")
										.profile-persone__row
											p 0x...263a

				//==== body course-frame =======
				.course-frame-body

					//=======video frame =======
					.course-frame-player(style="background-image:url(./img/aboutGame/video-poster.jpg)")
						
						//====блок-затемнение  ========
						.course-frame-player__overlay
							//===========кнопка Play временно скрыта через display: none. Если этому диву добавить класс visible - кнопка станет видна ==============
							.video-play-btn.visible
							//=========== блок с песочными часами - виден из-за класса visible Если этот класс удалить, то блок  скроется  ==============
							.waiting-block
								.icon-clock
								.text-14.text-bold
									p Через 10 минут
					
					//======= контент под видео =======
					.course-frame-text
						//===========блок под видео: Посмотрите видео и ответьте на вопрос ===============
						.course-frame-text__block
							.course-frame-text__header
								.text-16
									p Как вы видите решение проблемы из видео?
							.course-frame-text__body
								.text-14.course-frame-text__title
									p #[span +1 балл эксперта] за правильный ответ
								.flex-wrapper
									.comments-block__avatar(style="background-image: url(./img/comment1.jpg")
									//=======форма для заметки ===========
									form.note-form(action="" method="method")
										.form-field.form-field--textarea
											textarea(type="text" required placeholder="Введите ответ")
											button(type="submit").form-btn.send-btn
				
				
				//==== footer#2  без выставления оценки лак/дизлайк =======
				.course-frame-footer
					.flex-content
						.course-frame-header__right
							.text-group
								a(href="#!").button.button-light Пропустить
								a(href="#!").button.button--color.button--flex
									span Продолжить
									svg(width="16" height="16")
										use(xlink:href="./img/svg-sprite.svg#arrRight")
		
	
	
block variables
	-var title = "Course | Webinar";


