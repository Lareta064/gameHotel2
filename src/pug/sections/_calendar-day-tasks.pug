//====== календарь на один день ====
.calendar-day-tasks
	.container
		.task-board-column.task-board-column--queueing
			//=====заголовок
			.task-board-column__title
				.badge.badge--white 3
				h4 Задачи на день
			
			//====карточки ====
			.task-board-list
				//=======одна карточка =======
				.task-card
					.task-card__head
						.task-card-badge Начать до #[span 14:00]
						.task-card-options(data-btn="task_A")
					.task-card__body
						.task-card-title 10 побед в Arena (PvP)
						.task-card-timeCounter Задача на #[span 1 ч 20 мин]
						.task-card-deskrip
							p Возможное описание задачи что надо зайти в игру и пробить PVP или иные пояснения...
					.task-card__footer
						.task-card__footer-col
								.task-card__logo
									img(src="./img/games/ember-logo.png", width="80" alt="img")
						.task-card__footer-col
							.task-card__footer-spans
								span от 
								span $8
							a(href="#!").task-card-state
								span Go
								svg(width="20" height="20")
									use(xlink:href="./img/svg-sprite.svg#arrRight")
			
