mixin header(menuItems)
	header.header.header--desk
		.header-content.d-flex
			.header-left
				.mobile-logo
					a(href="#!")
						svg(width="42" height="24")
							use(xlink:href="./img/svg-sprite.svg#footer-logo")
				.custom-select.custom-select--lang
					.select-icon
					.select-field
						input(type="text" value="Ru" readonly)
					.select-list
						ul
							li.current(data-role="Ru") Ru
							li(data-role="En") En
							
			.header-center
				.header-menu
					ul
						each item in menuItems
							li
								a(href=""+ item.link) #{item.text}
